@model IEnumerable<ContainerManagement.Application.Dtos.Vendors.VendorListItemDto>

@{
    ViewData["Title"] = "Vendors";
}

@section Styles{
    <link rel="stylesheet" href="~/css/ui-common.css" asp-append-version="true" />
    <style>
        .op-toast { position: fixed; right: 1rem; bottom: 1rem; background: #111827; color: #fff; padding: .5rem .75rem; border-radius: .375rem; opacity: 0; transition: opacity .2s ease; }
        .op-toast.show { opacity: .95; }
    </style>
}

<div class="operator-page">
    <div class="page-header">Vendors</div>
    @await Html.PartialAsync("_GridToolbar")

    <div class="content">
        <div class="left-grid">
            <div class="grid-card">
                <div class="grid-header">
                    <div>Vendor Data</div>
                    <span class="badge badge-count" id="vd-total">@Model?.Count() ?? 0</span>
                </div>

                <div class="table-wrapper">
                    <table class="table table-sm mb-0 sticky" id="vendorsTable">
                        <thead>
                            <tr>
                                <th>Vendor Name</th>
                                <th>Vendor Code</th>
                                <th>Country</th>
                                <th style="width:130px;">Actions</th>
                            </tr>
                            <tr class="filter-row">
                                <th><input id="cf-name" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-code" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-country" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="vd-grid-body">
                        @if (Model?.Any() == true)
                        {
                            foreach (var v in Model)
                            {
                                <tr data-id="@v.Id">
                                    <td class="col-name"><span class="disp">@v.VendorName</span><input class="form-control form-control-sm edit d-none" value="@v.VendorName" /></td>
                                    <td class="col-code"><span class="disp">@v.VendorCode</span><input class="form-control form-control-sm edit d-none" value="@v.VendorCode" /></td>
                                    <td class="col-country"><span class="disp">@v.CountryName</span>
                                        <select class="form-select form-select-sm edit d-none">
                                            @if (ViewBag.Countries is IEnumerable<SelectListItem> countries)
                                            { foreach (var c in countries){ <option value="@c.Value" selected="@(v.CountryId.ToString()==c.Value)">@c.Text</option>; } }
                                        </select>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2 align-items-center">
                                            <button type="button" class="btn btn-sm btn-outline-primary btn-edit" data-bs-toggle="tooltip" title="Edit"><i class="bi bi-pencil"></i></button>
                                            <button type="button" class="btn btn-sm btn-success d-none btn-save" data-bs-toggle="tooltip" title="Save"><i class="bi bi-check-lg"></i></button>
                                            <button type="button" class="btn btn-sm btn-secondary d-none btn-cancel" data-bs-toggle="tooltip" title="Cancel"><i class="bi bi-x-lg"></i></button>
                                            <form asp-action="Delete" method="post" class="d-inline m-0">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@v.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete" onclick="return confirm('Delete this vendor?');"><i class="bi bi-trash"></i></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="right-blank"></div>
    </div>
</div>

<div id="vd-toast" class="op-toast" role="status" aria-live="polite"></div>
<form id="vnd-af">@Html.AntiForgeryToken()</form>
@section Scripts {
    <script>
        (function(){
            const q=(s)=>document.querySelector(s);
            const rows = Array.from(document.querySelectorAll('#vd-grid-body tr'));
            const total = q('#vd-total');
            const refreshBtn = q('#grid-refresh');
            const toast = q('#vd-toast');
            function showToast(msg){ if(!toast) return; toast.textContent = msg; toast.classList.add('show'); setTimeout(()=>toast.classList.remove('show'), 1500); }
            function filter(){
                const fname=(q('#cf-name')?.value||'').toLowerCase();
                const fcode=(q('#cf-code')?.value||'').toLowerCase();
                const fcountry=(q('#cf-country')?.value||'').toLowerCase();
                let count=0;
                rows.forEach(r=>{
                    const name=r.querySelector('.col-name .disp').textContent.toLowerCase();
                    const code=r.querySelector('.col-code .disp').textContent.toLowerCase();
                    const country=r.querySelector('.col-country .disp').textContent.toLowerCase();
                    const show=(!fname||name.includes(fname))&&(!fcode||code.includes(fcode))&&(!fcountry||country.includes(fcountry));
                    r.style.display = show? '':'none';
                    if (show) count++;
                });
                if (total) total.textContent = count;
            }
            ['#cf-name','#cf-code','#cf-country'].forEach(id=>{ const e=q(id); if(e) e.addEventListener('input', filter);}); filter();
            function token(){ const el=document.querySelector('#vnd-af input[name="__RequestVerificationToken"]'); return el?el.value:''; }
            rows.forEach(r=>{
                const edit=r.querySelector('.btn-edit'); const save=r.querySelector('.btn-save'); const cancel=r.querySelector('.btn-cancel');
                const toggle=()=>{ r.querySelectorAll('.disp').forEach(e=>e.classList.toggle('d-none')); r.querySelectorAll('.edit').forEach(e=>e.classList.toggle('d-none')); edit.classList.toggle('d-none'); save.classList.toggle('d-none'); cancel.classList.toggle('d-none'); };
                let orig=null;
                edit?.addEventListener('click',()=>{ orig={ name:r.querySelector('.col-name input').value, code:r.querySelector('.col-code input').value, country:r.querySelector('.col-country select').value}; toggle(); });
                cancel?.addEventListener('click',()=>{ if(orig){ r.querySelector('.col-name input').value=orig.name; r.querySelector('.col-code input').value=orig.code; r.querySelector('.col-country select').value=orig.country; } toggle();});
                save?.addEventListener('click', async ()=>{
                    const payload={ id:r.getAttribute('data-id'), vendorName:r.querySelector('.col-name input').value, vendorCode:r.querySelector('.col-code input').value, countryId:r.querySelector('.col-country select').value };
                    const resp=await fetch('/Vendors/InlineUpdate',{ method:'POST', headers:{ 'Content-Type':'application/json','RequestVerificationToken': token() }, body: JSON.stringify(payload)});
                    if (resp.ok){ const data=await resp.json(); r.querySelector('.col-name .disp').textContent=data.vendorName||payload.vendorName; r.querySelector('.col-code .disp').textContent=data.vendorCode||payload.vendorCode; r.querySelector('.col-country .disp').textContent=data.countryName||''; toggle(); showToast('Saved'); } else alert('Failed to save changes');
                });
            });
            refreshBtn?.addEventListener('click', ()=>{ filter(); showToast('Grid refreshed'); });
        })();
    </script>
}