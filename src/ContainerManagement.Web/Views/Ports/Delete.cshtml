@model ContainerManagement.Application.Dtos.Ports.PortListItemDto

@{
    ViewData["Title"] = "Delete Port";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4>Confirm Delete</h4>
        </div>

        <div class="card-body">
            <p>Are you sure you want to delete this port?</p>

            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Port Code:</strong> @Model.PortCode</li>
                <li class="list-group-item"><strong>Full Name:</strong> @Model.FullName</li>
                <li class="list-group-item"><strong>Country:</strong> @Model.Country</li>
            </ul>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>

        </div>
    </div>
</div>
