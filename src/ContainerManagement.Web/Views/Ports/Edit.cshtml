@model ContainerManagement.Application.Dtos.Ports.PortUpdateDto

@{
    ViewData["Title"] = "Edit Port";
}

<div class="container mt-4">
    <h3 class="fw-bold mb-3">Edit Port</h3>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="PortCode" class="form-label"></label>
                        <input asp-for="PortCode" class="form-control" />
                        <span asp-validation-for="PortCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Region" class="form-label"></label>
                        <input asp-for="Region" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="RegionCode" class="form-label"></label>
                        <input asp-for="RegionCode" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-warning">Update</button>
            </div>
        </div>
    </form>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
