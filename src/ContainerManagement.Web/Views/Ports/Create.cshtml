@model ContainerManagement.Application.Dtos.Ports.PortUpdateDto

@{
    ViewData["Title"] = "Edit Port";
}

<div class="container mt-4">
    <h3 class="fw-bold mb-3">Edit Port</h3>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="card shadow-sm">
            <div class="card-body p-0">

                <table class="table table-bordered align-middle mb-0">
                    <tbody>
                        <tr>
                            <th style="width: 25%;" class="bg-light">Port Code</th>
                            <td>
                                <input asp-for="PortCode" class="form-control" />
                                <span asp-validation-for="PortCode" class="text-danger"></span>
                            </td>
                        </tr>

                        <tr>
                            <th class="bg-light">Full Name</th>
                            <td>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </td>
                        </tr>

                        <tr>
                            <th class="bg-light">Country</th>
                            <td>
                                <input asp-for="Country" class="form-control" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </td>
                        </tr>

                        <tr>
                            <th class="bg-light">Region</th>
                            <td>
                                <input asp-for="Region" class="form-control" />
                            </td>
                        </tr>

                        <tr>
                            <th class="bg-light">Region Code</th>
                            <td>
                                <input asp-for="RegionCode" class="form-control" />
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>

            <div class="card-footer text-end">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-warning">Update</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
