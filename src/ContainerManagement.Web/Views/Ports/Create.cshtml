@model ContainerManagement.Application.Dtos.Ports.PortCreateDto

@{
    ViewData["Title"] = "Create Port";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>Create New Port</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="PortCode" class="form-label"></label>
                        <input asp-for="PortCode" class="form-control" />
                        <span asp-validation-for="PortCode" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Country" class="form-label"></label>
                        <input asp-for="Country" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Region" class="form-label"></label>
                        <input asp-for="Region" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="RegionCode" class="form-label"></label>
                        <input asp-for="RegionCode" class="form-control" />
                    </div>
                </div>

                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>
