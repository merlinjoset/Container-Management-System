@model List<ContainerManagement.Application.Dtos.Ports.PortListItemDto>

@{
    ViewData["Title"] = "Ports";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Ports</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Add Port
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Port Code</th>
                        <th>Full Name</th>
                        <th>Country</th>
                        <th>Region</th>
                        <th>Region Code</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var port in Model)
                        {
                            <tr>
                                <td><strong>@port.PortCode</strong></td>
                                <td>@port.FullName</td>
                                <td>@port.Country</td>
                                <td>@port.Region</td>
                                <td>@port.RegionCode</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@port.Id"
                                       class="btn btn-sm btn-warning me-2">
                                        Edit
                                    </a>
                                   <button type="button"
                                        class="btn btn-sm btn-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deletePortModal"
                                        data-id="@port.Id"
                                        data-code="@port.PortCode"
                                        data-name="@port.FullName">
                                    Delete
                                </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                No ports available.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>


<div class="modal fade" id="deletePortModal" tabindex="-1" aria-labelledby="deletePortModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deletePortModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p class="mb-2">Are you sure you want to delete this port?</p>

                <div class="border rounded p-2 bg-light">
                    <div><strong>Port Code:</strong> <span id="delPortCode"></span></div>
                    <div><strong>Full Name:</strong> <span id="delPortName"></span></div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <form id="deletePortForm" asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="delPortId" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <script>
        const deleteModal = document.getElementById('deletePortModal');

        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;

            const id = button.getAttribute('data-id');
            const code = button.getAttribute('data-code');
            const name = button.getAttribute('data-name');

            document.getElementById('delPortId').value = id;
            document.getElementById('delPortCode').textContent = code || '';
            document.getElementById('delPortName').textContent = name || '';
        });
    </script>
}

