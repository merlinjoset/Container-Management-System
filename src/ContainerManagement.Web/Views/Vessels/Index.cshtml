@model IEnumerable<ContainerManagement.Application.Dtos.Vessels.VesselListItemDto>

@{
    ViewData["Title"] = "Vessels";
}

@section Styles{
    <link rel="stylesheet" href="~/css/ui-common.css" asp-append-version="true" />
    <style>
        .op-toast { position: fixed; right: 1rem; bottom: 1rem; background: #111827; color: #fff; padding: .5rem .75rem; border-radius: .375rem; opacity: 0; transition: opacity .2s ease; }
        .op-toast.show { opacity: .95; }
            /* Full-bleed for this page only */
        .container.app-container { max-width: 100% !important; padding-left: 0 !important; padding-right: 0 !important; }
        .app-shell { gap: .75rem; }
        .grid-card { width: 100%; }
        .table-wrapper { max-height: calc(100vh - 240px); overflow: auto; }
    </style>
}

<div class="operator-page">
    <div class="page-header">Vessels</div>
    @await Html.PartialAsync("_GridToolbar")

    <div class="content">
        <div class="left-grid">
            <div class="grid-card">
                <div class="grid-header">
                    <div>Vessel Data</div>
                    <span class="badge badge-count" id="vs-total">@Model?.Count() ?? 0</span>
                </div>

                <div class="table-wrapper">
                    <table class="table table-sm mb-0 sticky" id="vesselsTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Code</th>
                                <th>IMO</th>
                                <th>TEUs</th>
                                <th>NRT</th>
                                <th>GRT</th>
                                <th>Flag</th>
                                <th>Speed</th>
                                <th>Year</th>
                                <th style="width:130px;">Actions</th>
                            </tr>
                            <tr class="filter-row">
                                <th><input id="cf-name" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-code" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-imo" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-teus" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-nrt" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-grt" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-flag" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-speed" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-year" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="vs-grid-body">
                        @if (Model?.Any() == true)
                        {
                            foreach (var v in Model)
                            {
                                <tr data-id="@v.Id">
                                    <td class="col-name"><span class="disp">@v.VesselName</span><input class="form-control form-control-sm edit d-none" value="@v.VesselName" /></td>
                                    <td class="col-code"><span class="disp">@v.VesselCode</span><input class="form-control form-control-sm edit d-none" value="@v.VesselCode" /></td>
                                    <td class="col-imo"><span class="disp">@v.ImoCode</span><input class="form-control form-control-sm edit d-none" value="@v.ImoCode" /></td>
                                    <td class="col-teus"><span class="disp">@v.Teus</span><input class="form-control form-control-sm edit d-none" value="@v.Teus" type="number" /></td>
                                    <td class="col-nrt"><span class="disp">@v.NRT</span><input class="form-control form-control-sm edit d-none" value="@v.NRT" type="number" step="0.01" /></td>
                                    <td class="col-grt"><span class="disp">@v.GRT</span><input class="form-control form-control-sm edit d-none" value="@v.GRT" type="number" step="0.01" /></td>
                                    <td class="col-flag"><span class="disp">@v.Flag</span><input class="form-control form-control-sm edit d-none" value="@v.Flag" /></td>
                                    <td class="col-speed"><span class="disp">@v.Speed</span><input class="form-control form-control-sm edit d-none" value="@v.Speed" type="number" step="0.1" /></td>
                                    <td class="col-year"><span class="disp">@v.BuildYear</span><input class="form-control form-control-sm edit d-none" value="@v.BuildYear" type="number" /></td>
                                    <td>
                                        <div class="d-flex gap-2 align-items-center">
                                            <button type="button" class="btn btn-sm btn-outline-primary btn-edit" data-bs-toggle="tooltip" title="Edit"><i class="bi bi-pencil"></i></button>
                                            <button type="button" class="btn btn-sm btn-success d-none btn-save" data-bs-toggle="tooltip" title="Save"><i class="bi bi-check-lg"></i></button>
                                            <button type="button" class="btn btn-sm btn-secondary d-none btn-cancel" data-bs-toggle="tooltip" title="Cancel"><i class="bi bi-x-lg"></i></button>
                                            <form asp-action="Delete" method="post" class="d-inline m-0">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@v.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete" onclick="return confirm('Delete this vessel?');"><i class="bi bi-trash"></i></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="right-blank"></div>
    </div>
</div>

<div id="vs-toast" class="op-toast" role="status" aria-live="polite"></div>
<form id="vs-af">@Html.AntiForgeryToken()</form>

@section Scripts {
    <script>
        (function(){
            const q=(s)=>document.querySelector(s);
            const rows = Array.from(document.querySelectorAll('#vs-grid-body tr'));
            const total = q('#vs-total');
            const refreshBtn = q('#grid-refresh');
            const toast = q('#vs-toast');
            function showToast(msg){ if(!toast) return; toast.textContent = msg; toast.classList.add('show'); setTimeout(()=>toast.classList.remove('show'), 1500); }
            function filter(){
    const fname=(q('#cf-name')?.value||'').toLowerCase();
    const fcode=(q('#cf-code')?.value||'').toLowerCase();
    const fimo=(q('#cf-imo')?.value||'').toLowerCase();
    const fteus=(q('#cf-teus')?.value||'').toLowerCase();
    const fnrt=(q('#cf-nrt')?.value||'').toLowerCase();
    const fgrt=(q('#cf-grt')?.value||'').toLowerCase();
    const fflag=(q('#cf-flag')?.value||'').toLowerCase();
    const fspeed=(q('#cf-speed')?.value||'').toLowerCase();
    const fyear=(q('#cf-year')?.value||'').trim();
    function numberMatches(text, query){
        const val = parseFloat((text||'').toString().trim());
        if (!query) return true;
        const range = query.match(/^(\d+(?:\.\d+)?)\s*-\s*(\d+(?:\.\d+)?)$/);
        if (range){
            const a = parseFloat(range[1]), b = parseFloat(range[2]);
            const lo = Math.min(a,b), hi = Math.max(a,b);
            return !isNaN(val) && val >= lo && val <= hi;
        }
        const cmp = query.match(/^(>=|<=|>|<|=)?\s*(\d+(?:\.\d+)?)$/);
        if (cmp){
            const op = cmp[1]||'=';
            const n = parseFloat(cmp[2]);
            if (isNaN(val) || isNaN(n)) return false;
            switch(op){
                case '>': return val > n;
                case '<': return val < n;
                case '>=': return val >= n;
                case '<=': return val <= n;
                case '=': default: return val === n;
            }
        }
        return (text||'').toString().toLowerCase().includes(query.toLowerCase());
    }
    function yearMatches(yearText, query){
        const val = parseInt((yearText||'').toString().trim(), 10);
        if (!query) return true;
        const range = query.match(/^(\d{4})\s*-\s*(\d{4})$/);
        if (range){
            const a = parseInt(range[1],10), b = parseInt(range[2],10);
            const lo = Math.min(a,b), hi = Math.max(a,b);
            return !isNaN(val) && val >= lo && val <= hi;
        }
        const cmp = query.match(/^(>=|<=|>|<|=)?\s*(\d{4})$/);
        if (cmp){
            const op = cmp[1]||'=';
            const n = parseInt(cmp[2],10);
            if (isNaN(val) || isNaN(n)) return false;
            switch(op){
                case '>': return val > n;
                case '<': return val < n;
                case '>=': return val >= n;
                case '<=': return val <= n;
                case '=': default: return val === n;
            }
        }
        return (yearText||'').toLowerCase().includes(query.toLowerCase());
    }
    let count=0;
    rows.forEach(r=>{
        const name=r.querySelector('.col-name .disp').textContent.toLowerCase();
        const code=r.querySelector('.col-code .disp').textContent.toLowerCase();
        const imo=r.querySelector('.col-imo .disp').textContent.toLowerCase();
        const teus=r.querySelector('.col-teus .disp').textContent;
        const nrt=r.querySelector('.col-nrt .disp').textContent;
        const grt=r.querySelector('.col-grt .disp').textContent;
        const flag=r.querySelector('.col-flag .disp').textContent.toLowerCase();
        const speed=r.querySelector('.col-speed .disp').textContent;
        const year=r.querySelector('.col-year .disp').textContent;
        const show=
            (!fname||name.includes(fname))&&
            (!fcode||code.includes(fcode))&&
            (!fimo||imo.includes(fimo))&&
            numberMatches(teus, fteus)&&
            numberMatches(nrt, fnrt)&&
            numberMatches(grt, fgrt)&&
            (!fflag||flag.includes(fflag))&&
            numberMatches(speed, fspeed)&&
            yearMatches(year, fyear);
        r.style.display = show? '' : 'none';
        if (show) count++;
    });
    if (total) total.textContent = count;
            }
            ['#cf-name','#cf-code','#cf-imo','#cf-teus','#cf-nrt','#cf-grt','#cf-flag','#cf-speed','#cf-year'].forEach(id=>{ const e=q(id); if(e) e.addEventListener('input', filter);}); filter();
            function token(){ const el=document.querySelector('#vs-af input[name="__RequestVerificationToken"]'); return el?el.value:''; }
            rows.forEach(r=>{
                const edit=r.querySelector('.btn-edit'); const save=r.querySelector('.btn-save'); const cancel=r.querySelector('.btn-cancel');
                const toggle=()=>{ r.querySelectorAll('.disp').forEach(e=>e.classList.toggle('d-none')); r.querySelectorAll('.edit').forEach(e=>e.classList.toggle('d-none')); edit.classList.toggle('d-none'); save.classList.toggle('d-none'); cancel.classList.toggle('d-none'); };
                let orig=null;
                edit?.addEventListener('click',()=>{ orig={ name:r.querySelector('.col-name input').value, code:r.querySelector('.col-code input').value, imo:r.querySelector('.col-imo input').value, teus:r.querySelector('.col-teus input').value, nrt:r.querySelector('.col-nrt input').value, grt:r.querySelector('.col-grt input').value, flag:r.querySelector('.col-flag input').value, speed:r.querySelector('.col-speed input').value, year:r.querySelector('.col-year input').value }; toggle(); });
                cancel?.addEventListener('click',()=>{ if(orig){ r.querySelector('.col-name input').value=orig.name; r.querySelector('.col-code input').value=orig.code; r.querySelector('.col-imo input').value=orig.imo; r.querySelector('.col-teus input').value=orig.teus; r.querySelector('.col-nrt input').value=orig.nrt; r.querySelector('.col-grt input').value=orig.grt; r.querySelector('.col-flag input').value=orig.flag; r.querySelector('.col-speed input').value=orig.speed; r.querySelector('.col-year input').value=orig.year; } toggle();});
                save?.addEventListener('click', async ()=>{
                    const payload={ id:r.getAttribute('data-id'), vesselName:r.querySelector('.col-name input').value, vesselCode:r.querySelector('.col-code input').value, imoCode:r.querySelector('.col-imo input').value, teus:parseInt(r.querySelector('.col-teus input').value||'0'), nrt:parseFloat(r.querySelector('.col-nrt input').value||'0'), grt:parseFloat(r.querySelector('.col-grt input').value||'0'), flag:r.querySelector('.col-flag input').value, speed:parseFloat(r.querySelector('.col-speed input').value||'0'), buildYear:parseInt(r.querySelector('.col-year input').value||'0') };
                    const resp=await fetch('/Vessels/InlineUpdate',{ method:'POST', headers:{ 'Content-Type':'application/json','RequestVerificationToken': token() }, body: JSON.stringify(payload)});
                    if (resp.ok){ const d=await resp.json(); r.querySelector('.col-name .disp').textContent=d.vesselName||payload.vesselName; r.querySelector('.col-code .disp').textContent=d.vesselCode||payload.vesselCode; r.querySelector('.col-imo .disp').textContent=d.imoCode||payload.imoCode; r.querySelector('.col-teus .disp').textContent=d.teus||payload.teus; r.querySelector('.col-nrt .disp').textContent=d.nrt||payload.nrt; r.querySelector('.col-grt .disp').textContent=d.grt||payload.grt; r.querySelector('.col-flag .disp').textContent=d.flag||payload.flag; r.querySelector('.col-speed .disp').textContent=d.speed||payload.speed; r.querySelector('.col-year .disp').textContent=d.buildYear||payload.buildYear; toggle(); showToast('Saved'); } else alert('Failed to save changes');
                });
            });
            refreshBtn?.addEventListener('click', ()=>{ filter(); showToast('Grid refreshed'); });
        })();
    </script>
}

