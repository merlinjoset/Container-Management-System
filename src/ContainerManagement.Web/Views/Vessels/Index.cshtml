@model List<ContainerManagement.Application.Dtos.Vessels.VesselListItemDto>

@{
    ViewData["Title"] = "Vessels";
}

<div class="container mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
        <h2 class="fw-bold mb-0">Vessels</h2>
        <div class="w-100 w-md-auto" style="min-width:640px;">
            <div class="input-group">
                <span class="input-group-text">Name</span>
                <input id="vesselSearch" class="form-control" placeholder="Filter by name..." />
                <select id="vesselPageSize" class="form-select" style="max-width: 120px;">
                    <option value="10">10</option>
                    <option value="25" selected>25</option>
                    <option value="50">50</option>
                    <option value="0">All</option>
                </select>
                <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add Vessel</a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle" id="vesselsTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Code</th>
                            <th>IMO</th>
                            <th>TEUs</th>
                            <th>NRT</th>
                            <th>GRT</th>
                            <th>Flag</th>
                            <th>Speed</th>
                            <th>Year</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var v in Model)
                            {
                                <tr>
                                    <td>@v.VesselName</td>
                                    <td>@v.VesselCode</td>
                                    <td>@v.ImoCode</td>
                                    <td>@v.Teus</td>
                                    <td>@v.NRT</td>
                                    <td>@v.GRT</td>
                                    <td>@v.Flag</td>
                                    <td>@v.Speed</td>
                                    <td>@v.BuildYear</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-warning me-2">Edit</a>
                                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteVesselModal" data-id="@v.Id" data-name="@v.VesselName">
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr data-empty-row="1">
                                <td colspan="10" class="text-center text-muted">No vessels available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteVesselModal" tabindex="-1" aria-labelledby="deleteVesselModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteVesselModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">Are you sure you want to delete this vessel?</p>
                <div class="border rounded p-2 bg-light">
                    <div><strong>Vessel Name:</strong> <span id="delVesselName"></span></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteVesselForm" asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="delVesselId" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const vSearch = document.getElementById('vesselSearch');
        const vTable = document.getElementById('vesselsTable');
        const vSize = document.getElementById('vesselPageSize');
        function applyVesselFilter() {
            const q = (vSearch?.value || '').toLowerCase();
            const rows = Array.from(vTable.querySelectorAll('tbody tr')).filter(r => !r.dataset.emptyRow);
            rows.forEach(tr => {
                const text = tr.innerText.toLowerCase();
                tr.dataset.match = text.includes(q) ? '1' : '0';
            });
            paginateVessels();
        }
        function paginateVessels() {
            const size = parseInt(vSize?.value || '25', 10);
            const matched = Array.from(vTable.querySelectorAll('tbody tr')).filter(tr => tr.dataset.match !== '0' && !tr.dataset.emptyRow);
            const all = Array.from(vTable.querySelectorAll('tbody tr')).filter(r => !r.dataset.emptyRow);
            all.forEach(tr => tr.style.display = 'none');
            if (size === 0) matched.forEach(tr => tr.style.display = '');
            else matched.slice(0, size).forEach(tr => tr.style.display = '');

            const emptyRow = vTable.querySelector('tbody tr[data-empty-row="1"]');
            if (emptyRow) emptyRow.style.display = matched.length === 0 ? '' : 'none';
        }
        vSearch?.addEventListener('input', applyVesselFilter);
        vSize?.addEventListener('change', paginateVessels);
        Array.from(vTable.querySelectorAll('tbody tr')).forEach(tr => { if (!tr.dataset.emptyRow) tr.dataset.match = '1'; });
        paginateVessels();

        const deleteModal = document.getElementById('deleteVesselModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            document.getElementById('delVesselId').value = id;
            document.getElementById('delVesselName').textContent = name || '';
        });
    </script>
}

