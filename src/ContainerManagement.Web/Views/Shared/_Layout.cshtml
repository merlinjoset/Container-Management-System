@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Container Processing & Customer Compliance System </title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContainerManagement.Web.styles.css" asp-append-version="true" />

    <style>
        .app-navbar {
            background: linear-gradient(90deg, #0f172a, #111827);
        }

            .app-navbar .nav-link {
                color: rgba(255,255,255,.85) !important;
                border-radius: .5rem;
                padding: .45rem .8rem;
            }

                .app-navbar .nav-link:hover {
                    background: rgba(255,255,255,.08);
                    color: #fff !important;
                }

                .app-navbar .nav-link.active {
                    background: rgba(255,255,255,.14);
                    color: #fff !important;
                }

            .app-navbar .navbar-brand {
                color: #fff !important;
                font-weight: 600;
                letter-spacing: .2px;
            }

        .user-pill {
            background: rgba(255,255,255,.10);
            border: 1px solid rgba(255,255,255,.18);
            color: rgba(255,255,255,.92);
            padding: .35rem .65rem;
            border-radius: 999px;
            font-size: .9rem;
            display: inline-flex;
            gap: .35rem;
            align-items: center;
        }

        .app-container {
            min-height: calc(100vh - 120px);
        }

        .app-footer {
            background: #f8fafc;
        }

        .app-shell {
            display: flex;
            gap: 1rem;
            align-items: flex-start;
        }

        .app-sidebar {
            width: 260px;
            position: sticky;
            top: 84px; /* aligns under navbar; adjust if navbar height differs */
            height: calc(100vh - 110px);
            border-radius: 1rem;
            background: #ffffff;
            border: 1px solid rgba(15, 23, 42, .08);
            box-shadow: 0 6px 16px rgba(15, 23, 42, .06);
            overflow: auto;
        }

            .app-sidebar .sidebar-title {
                font-weight: 700;
                color: #0f172a;
                letter-spacing: .2px;
            }

            .app-sidebar .nav-link {
                color: #0f172a !important;
                border-radius: .75rem;
                padding: .55rem .75rem;
                display: flex;
                align-items: center;
                gap: .6rem;
            }

                .app-sidebar .nav-link:hover {
                    background: #f1f5f9;
                }

                .app-sidebar .nav-link.active {
                    background: #0f172a;
                    color: #fff !important;
                }

        .app-content {
            flex: 1;
            min-width: 0;
        }

        @@media (min-width: 1400px) {
            .container-xxl, .container-xl, .container-lg, .container-md, .container-sm, .container {
                max-width: 100% !important;
            }
        }
    </style>
</head>
<body class="bg-light">

    @{
        var path = Context?.Request?.Path.Value?.ToLowerInvariant() ?? "";
        var isPorts = path.StartsWith("/ports");
        var isRegions = path.StartsWith("/regions");
        var isCountries = path.StartsWith("/countries");
        var isTerminals = path.StartsWith("/terminals");
        var isProviders = path.StartsWith("/providers");
        var isUsers = path.StartsWith("/users");
        var isAccount = path.StartsWith("/account");

        var display =
        User.FindFirstValue(ClaimTypes.Email)
        ?? User.Identity?.Name
        ?? User.FindFirstValue(ClaimTypes.NameIdentifier)
        ?? "User";
    }

    <header>
        <nav class="navbar navbar-expand-lg app-navbar shadow-sm">
            <div class="container-fluid px-3">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Payments" asp-action="Index">
                    Container Processing & Customer Compliance System
                </a>

                <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(isUsers ? "active" : "")" asp-controller="Users" asp-action="Index">Users</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item my-2 my-lg-0">
                                <span class="user-pill">
                                    <span style="width:8px;height:8px;border-radius:50%;background:#22c55e;display:inline-block;"></span>
                                    <span>Signed in</span>
                                    <strong class="ms-1">@display</strong>
                                </span>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-light btn-sm">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm @(isAccount ? "active" : "")" asp-controller="Account" asp-action="Login">
                                    Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container app-container py-4">
        <div class="app-shell">

            @* Sidebar *@
            @if (User.Identity?.IsAuthenticated == true)
            {
                <aside class="app-sidebar p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="sidebar-title">Navigation</div>
                    </div>

                    <div class="text-muted small mb-3">Master Data</div>

                    <nav class="nav nav-pills flex-column gap-1">
                        <a class="nav-link @(isPorts ? "active" : "")"
                           asp-controller="Ports" asp-action="Index">
                            <span>Ports</span>
                        </a>

                        <a class="nav-link @(isRegions ? "active" : "")"
                           asp-controller="Regions" asp-action="Index">
                            <span>Regions</span>
                        </a>

                        <a class="nav-link @(isCountries ? "active" : "")"
                           asp-controller="Countries" asp-action="Index">
                            <span>Countries</span>
                        </a>

                        <a class="nav-link @(isTerminals ? "active" : "")"
                           asp-controller="Terminals" asp-action="Index">
                            <span>Terminals</span>
                        </a>
                    </nav>
                   
                </aside>
            }

            @* Main content *@
            <section class="app-content">
                <main role="main">
                    @RenderBody()
                </main>
            </section>

        </div>
    </div>

    <footer class="border-top app-footer text-muted py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <div>&copy; @DateTime.UtcNow.Year - Container Processing & Customer Compliance System</div>
            <div class="small">Container Processing & Customer Compliance System</div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
