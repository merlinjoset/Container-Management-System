@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Container Processing & Customer Compliance System - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContainerManagement.Web.styles.css" asp-append-version="true" />


    <style>
        .app-navbar {
            background: linear-gradient(90deg, #0f172a, #111827);
        }

            .app-navbar .nav-link {
                color: rgba(255,255,255,.85) !important;
                border-radius: .5rem;
                padding: .45rem .8rem;
            }

                .app-navbar .nav-link:hover {
                    background: rgba(255,255,255,.08);
                    color: #fff !important;
                }

                .app-navbar .nav-link.active {
                    background: rgba(255,255,255,.14);
                    color: #fff !important;
                }

            .app-navbar .navbar-brand {
                color: #fff !important;
                font-weight: 600;
                letter-spacing: .2px;
            }

        /* Logo slot styles */
        .app-logo-slot {
            width: 36px;
            height: 36px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: .5rem;
            background: rgba(255,255,255,.10);
            border: 1px solid rgba(255,255,255,.18);
            color: #fff;
            font-weight: 700;
            font-size: .9rem;
        }

            .app-logo-slot img {
                width: 100%;
                height: 100%;
                object-fit: contain;
                border-radius: .4rem;
                display: block;
            }

        .user-pill {
            background: rgba(255,255,255,.10);
            border: 1px solid rgba(255,255,255,.18);
            color: rgba(255,255,255,.92);
            padding: .35rem .65rem;
            border-radius: 999px;
            font-size: .9rem;
            display: inline-flex;
            gap: .35rem;
            align-items: center;
        }

        .app-container {
            min-height: calc(100vh - 120px);
        }

        .app-footer {
            background: #f8fafc;
        }

        .app-shell {
            display: flex;
            gap: 1rem;
            align-items: flex-start;
        }

        .app-sidebar {
            width: 260px;
            position: sticky;
            top: 84px; /* aligns under navbar; adjust if navbar height differs */
            height: calc(100vh - 110px);
            border-radius: 1rem;
            background: #ffffff;
            border: 1px solid rgba(15, 23, 42, .08);
            box-shadow: 0 6px 16px rgba(15, 23, 42, .06);
            overflow: auto;
        }

            .app-sidebar .sidebar-title {
                font-weight: 700;
                color: #0f172a;
                letter-spacing: .2px;
            }

            .app-sidebar .nav-link {
                color: #0f172a !important;
                border-radius: .75rem;
                padding: .55rem .75rem;
                display: flex;
                align-items: center;
                gap: .6rem;
                font-size: .875rem; /* slightly smaller side menu font */
            }

                .app-sidebar .nav-link:hover {
                    background: #f1f5f9;
                }

                .app-sidebar .nav-link.active {
                    background: #0f172a;
                    color: #fff !important;
                }

        .app-content {
            flex: 1;
            min-width: 0;
        }

        /* Sticky table header utility */
        table.sticky thead th {
            position: sticky;
            top: 0;
            background: #1e293b;
            color: #fff;
            z-index: 1;
        }
        table.sticky thead tr.filter-row th {
            position: sticky;
            top: 42px;
            background: #eef2f7;
            color: #111827;
            z-index: 1;
            border-bottom: 1px solid #d1d5db;
        }
        table.sticky thead tr.filter-row input,
        table.sticky thead tr.filter-row select {
            width: 100%;
            padding: .25rem .4rem;
            border: 1px solid #cbd5e1;
            border-radius: .25rem;
            font-size: .875rem;
        }

        @@media (max-width: 767.98px) {
            .app-shell { flex-direction: column; }
            .app-sidebar { display: none; }
        }

        @@media (min-width: 1400px) {
            .container-xxl, .container-xl, .container-lg, .container-md, .container-sm, .container {
                max-width: 100% !important;
            }
        }
            /* Grid data font sizing */
        .operator-page .table { font-size: .875rem; }
        .operator-page .table .btn { font-size: .8125rem; }
        .operator-page .table .form-control, .operator-page .table .form-select { font-size: .875rem; padding: .25rem .4rem; }    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light">

    @{
        var path = Context?.Request?.Path.Value?.ToLowerInvariant() ?? "";
        var isPorts = path.StartsWith("/ports");
        var isRegions = path.StartsWith("/regions");
        var isCountries = path.StartsWith("/countries");
        var isTerminals = path.StartsWith("/terminals");
        var isVessels = path.StartsWith("/vessels");
        var isVendors = path.StartsWith("/vendors");
        var isOperators = path.StartsWith("/operators");
        var isProviders = path.StartsWith("/providers");
        var isUsers = path.StartsWith("/users");
        var isAccount = path.StartsWith("/account");

        // ERP module routes (placeholder paths)
        var isSales = path.StartsWith("/sales");
        var isPurchases = path.StartsWith("/purchases") || path.StartsWith("/procurement");
        var isInventory = path.StartsWith("/inventory") || path.StartsWith("/warehouse");
        var isAccounting = path.StartsWith("/accounting") || path.StartsWith("/finance");
        var isHR = path.StartsWith("/hr") || path.StartsWith("/human-resources");
        var isProjects = path.StartsWith("/projects");
        var isManufacturing = path.StartsWith("/manufacturing") || path.StartsWith("/production");
        var isReports = path.StartsWith("/reports") || path.StartsWith("/analytics");

        var display =
        User.FindFirstValue(ClaimTypes.Email)
        ?? User.Identity?.Name
        ?? User.FindFirstValue(ClaimTypes.NameIdentifier)
        ?? "User";
    }

    <header>
        <nav class="navbar app-navbar shadow-sm">
            <div class="container-fluid px-3">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <span class="app-logo-slot me-1">CM</span>
                    <span>Container Processing & Customer Compliance System</span>
                </a>

                <ul class="navbar-nav ms-auto align-items-center gap-2 flex-row">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item my-2 my-lg-0">
                            <span class="user-pill">
                                <span style="width:8px;height:8px;border-radius:50%;background:#22c55e;display:inline-block;"></span>
                                <span>Signed in</span>
                                <strong class="ms-1">@display</strong>
                            </span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <div class="container app-container py-4">
        <div class="app-shell">

            @* Sidebar *@
            @if (User.Identity?.IsAuthenticated == true)
            {
                <aside class="app-sidebar p-3 d-none d-md-block">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="sidebar-title">Navigation</div>
                    </div>

                    <nav class="nav flex-column gap-1">
                        @{ var settingsUrl = Url.NavigateToMainMenu(ContainerManagement.Web.Models.Navigation.MainMenu.Settings);
                           var mastersUrl = Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.Masters);
                           var globalMastersUrl = Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.GlobalMasters);
                           var operatorUrl = Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.Operator);
                           var regionsUrl = Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.Regions);
                           var portsUrl = Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.Ports);
                           var terminalsUrl = Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.Terminals);
                           var vendorsUrl = Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.Vendors);
                           var restrictionUrl = Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.Restriction);
                           var systemToolsUrl = Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.SystemTools);
                           var userAccessSecurityUrl = Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.UserAccessSecurity);

                           var mastersActive =
                                path.StartsWith(mastersUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(globalMastersUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(operatorUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(regionsUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(portsUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(terminalsUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(vendorsUrl, StringComparison.OrdinalIgnoreCase);

                           var globalMastersActive =
                                path.StartsWith(globalMastersUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(operatorUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(regionsUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(portsUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(terminalsUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(vendorsUrl, StringComparison.OrdinalIgnoreCase);

                           var settingsActive = path.StartsWith(settingsUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(mastersUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(globalMastersUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(operatorUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(regionsUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(portsUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(terminalsUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(vendorsUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(restrictionUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(systemToolsUrl, StringComparison.OrdinalIgnoreCase)
                                || path.StartsWith(userAccessSecurityUrl, StringComparison.OrdinalIgnoreCase);
                        }
                        <a class="nav-link d-flex justify-content-between align-items-center @(settingsActive ? "active" : "")" data-bs-toggle="collapse" href="#settingsCollapse" role="button" aria-expanded="@(settingsActive.ToString().ToLower())" aria-controls="settingsCollapse">
                            <span>@ContainerManagement.Web.Models.Navigation.MainMenu.Settings.GetDisplayName()</span>
                            <i class="bi bi-chevron-down"></i>
                        </a>
                        <div class="collapse @(settingsActive ? "show" : "")" id="settingsCollapse">
                            <nav class="nav flex-column ms-3 gap-1">
                                <a class="nav-link @(mastersActive ? "active" : "")" data-bs-toggle="collapse" href="#mastersCollapse" role="button" aria-expanded="@(mastersActive.ToString().ToLower())" aria-controls="mastersCollapse">
                                    @ContainerManagement.Web.Models.Navigation.ModulePage.Masters.GetDisplayName()
                                </a>
                                <div class="collapse ms-3 @(mastersActive ? "show" : "")" id="mastersCollapse">
                                    <a class="nav-link @(globalMastersActive ? "active" : "")" data-bs-toggle="collapse" href="#globalMastersCollapse" role="button" aria-expanded="@(globalMastersActive.ToString().ToLower())" aria-controls="globalMastersCollapse">
                                        @ContainerManagement.Web.Models.Navigation.ModulePage.GlobalMasters.GetDisplayName()
                                    </a>
                                    <div class="collapse ms-3 @(globalMastersActive ? "show" : "")" id="globalMastersCollapse">
                                        <a class="nav-link" href="@Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.Regions)">@ContainerManagement.Web.Models.Navigation.ModulePage.Regions.GetDisplayName()</a>
                                        <a class="nav-link" href="@Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.Ports)">@ContainerManagement.Web.Models.Navigation.ModulePage.Ports.GetDisplayName()</a>
                                        <a class="nav-link" href="@Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.Terminals)">@ContainerManagement.Web.Models.Navigation.ModulePage.Terminals.GetDisplayName()</a>
                                        <a class="nav-link" href="@Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.Vendors)">@ContainerManagement.Web.Models.Navigation.ModulePage.Vendors.GetDisplayName()</a>
                                        <a class="nav-link" href="@operatorUrl">@ContainerManagement.Web.Models.Navigation.ModulePage.Operator.GetDisplayName()</a>
                                    </div>
                                </div>
                                <a class="nav-link" href="@restrictionUrl">@ContainerManagement.Web.Models.Navigation.ModulePage.Restriction.GetDisplayName()</a>
                                <a class="nav-link" href="@systemToolsUrl">@ContainerManagement.Web.Models.Navigation.ModulePage.SystemTools.GetDisplayName()</a>
                                <a class="nav-link" href="@userAccessSecurityUrl">@ContainerManagement.Web.Models.Navigation.ModulePage.UserAccessSecurity.GetDisplayName()</a>
                            </nav>
                        </div>

                        @{ var schedulesUrl = Url.NavigateToMainMenu(ContainerManagement.Web.Models.Navigation.MainMenu.Schedules);
                           var scheduleViewerUrl = Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.ScheduleViewer);
                           var schedulesActive = path.StartsWith(schedulesUrl, StringComparison.OrdinalIgnoreCase) || path.StartsWith(scheduleViewerUrl, StringComparison.OrdinalIgnoreCase);
                        }
                                                @{ var operationsUrl = Url.NavigateToMainMenu(ContainerManagement.Web.Models.Navigation.MainMenu.Operations);
                           var vesselsUrl = Url.OpenModule(ContainerManagement.Web.Models.Navigation.ModulePage.Vessels);
                           var operationsActive = path.StartsWith(operationsUrl, StringComparison.OrdinalIgnoreCase) || path.StartsWith(vesselsUrl, StringComparison.OrdinalIgnoreCase);
                        }
                        <a class="nav-link d-flex justify-content-between align-items-center @(operationsActive ? "active" : "")" data-bs-toggle="collapse" href="#operationsCollapse" role="button" aria-expanded="@(operationsActive.ToString().ToLower())" aria-controls="operationsCollapse"> 
                            <span>@ContainerManagement.Web.Models.Navigation.MainMenu.Operations.GetDisplayName()</span>
                            <i class="bi bi-chevron-down"></i>
                        </a>
                        <div class="collapse @(operationsActive ? "show" : "")" id="operationsCollapse">
                            <nav class="nav flex-column ms-3 gap-1">
                                <a class="nav-link @(isVessels ? "active" : "")" href="@vesselsUrl">@ContainerManagement.Web.Models.Navigation.ModulePage.Vessels.GetDisplayName()</a>
                            </nav>
                        </div><a class="nav-link d-flex justify-content-between align-items-center @(schedulesActive ? "active" : "")" data-bs-toggle="collapse" href="#schedulesCollapse" role="button" aria-expanded="@(schedulesActive.ToString().ToLower())" aria-controls="schedulesCollapse">
                            <span>@ContainerManagement.Web.Models.Navigation.MainMenu.Schedules.GetDisplayName()</span>
                            <i class="bi bi-chevron-down"></i>
                        </a>
                        <div class="collapse @(schedulesActive ? "show" : "")" id="schedulesCollapse">
                            <nav class="nav flex-column ms-3 gap-1">
                                <a class="nav-link @(schedulesActive ? "active" : "")" href="@scheduleViewerUrl">@ContainerManagement.Web.Models.Navigation.ModulePage.ScheduleViewer.GetDisplayName()</a>
                            </nav>
                        </div>

                        @{ var others = new [] {
                                ContainerManagement.Web.Models.Navigation.MainMenu.Commercial,
                                ContainerManagement.Web.Models.Navigation.MainMenu.CustomerService,
                                ContainerManagement.Web.Models.Navigation.MainMenu.Documentation,
                                ContainerManagement.Web.Models.Navigation.MainMenu.Operations,
                                ContainerManagement.Web.Models.Navigation.MainMenu.Contract,
                                ContainerManagement.Web.Models.Navigation.MainMenu.EMS,
                                ContainerManagement.Web.Models.Navigation.MainMenu.EDI
                            };
                           foreach (var m in others)
                           {
                               var url = Url.NavigateToMainMenu(m);
                               var active = path.StartsWith(url, StringComparison.OrdinalIgnoreCase) ? "active" : "";
                        <a class="nav-link @active" href="@url">@m.GetDisplayName()</a>
                           }
                        }
                    </nav>

                </aside>
            }

            @* Main content *@
            <section class="app-content">
                <main role="main">
                    @await Html.PartialAsync("_Alerts")
                    @RenderBody()
                </main>
            </section>

        </div>
    </div>

    <footer class="border-top app-footer text-muted py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <div>&copy; @DateTime.UtcNow.Year - Container Processing & Customer Compliance System</div>
            <div class="small">Container Processing & Customer Compliance System</div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

