@model IEnumerable<ContainerManagement.Application.Dtos.Regions.RegionListItemDto>

@{
    ViewData["Title"] = "Regions";
}

@section Styles{
    <link rel="stylesheet" href="~/css/ui-common.css" asp-append-version="true" />
    <style>
        .op-toast { position: fixed; right: 1rem; bottom: 1rem; background: #111827; color: #fff; padding: .5rem .75rem; border-radius: .375rem; opacity: 0; transition: opacity .2s ease; }
        .op-toast.show { opacity: .95; }
    </style>
}

<div class="operator-page">
    <div class="page-header">Regions</div>
    @await Html.PartialAsync("_GridToolbar")

    <div class="content">
        <div class="left-grid">
            <div class="grid-card">
                <div class="grid-header">
                    <div>Region Data</div>
                    <span class="badge badge-count" id="rg-total">@Model?.Count() ?? 0</span>
                </div>

                <div class="table-wrapper">
                    <table class="table table-sm mb-0 sticky" id="regionsTable">
                        <thead>
                            <tr>
                                <th>Region Name</th>
                                <th>Region Code</th>
                                <th style="width:120px;">Actions</th>
                            </tr>
                            <tr class="filter-row">
                                <th><input id="cf-name" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-code" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="rg-grid-body">
                        @if (Model?.Any() == true)
                        {
                            foreach (var r in Model)
                            {
                                <tr data-id="@r.Id">
                                    <td class="col-name">
                                        <span class="disp">@r.RegionName</span>
                                        <input class="form-control form-control-sm edit d-none" value="@r.RegionName" />
                                    </td>
                                    <td class="col-code">
                                        <span class="disp">@r.RegionCode</span>
                                        <input class="form-control form-control-sm edit d-none" value="@r.RegionCode" />
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2 align-items-center">
                                            <button type="button" class="btn btn-sm btn-outline-primary btn-edit" data-bs-toggle="tooltip" title="Edit"><i class="bi bi-pencil"></i></button>
                                            <button type="button" class="btn btn-sm btn-success d-none btn-save" data-bs-toggle="tooltip" title="Save"><i class="bi bi-check-lg"></i></button>
                                            <button type="button" class="btn btn-sm btn-secondary d-none btn-cancel" data-bs-toggle="tooltip" title="Cancel"><i class="bi bi-x-lg"></i></button>
                                            <form asp-action="Delete" method="post" class="d-inline m-0">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@r.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete" onclick="return confirm('Delete this region?');"><i class="bi bi-trash"></i></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="right-blank"></div>
    </div>
</div>

<div id="rg-toast" class="op-toast" role="status" aria-live="polite"></div>
<form id="rg-af">@Html.AntiForgeryToken()</form>

@section Scripts{
    <script>
        (function(){
            const q = (s)=>document.querySelector(s);
            const rows = Array.from(document.querySelectorAll('#rg-grid-body tr'));
            const total = q('#rg-total');
            const refreshBtn = q('#grid-refresh');
            const toast = q('#rg-toast');
            function showToast(msg){ if (!toast) return; toast.textContent = msg; toast.classList.add('show'); setTimeout(()=>toast.classList.remove('show'), 1500); }
            function applyFilter(){
                const name = (q('#cf-name')?.value || '').toLowerCase();
                const code = (q('#cf-code')?.value || '').toLowerCase();
                let count=0;
                rows.forEach(r=>{
                    const n = r.querySelector('.col-name .disp').textContent.toLowerCase();
                    const c = (r.querySelector('.col-code .disp').textContent||'').toLowerCase();
                    const show = (!name||n.includes(name)) && (!code||c.includes(code));
                    r.style.display = show? '':'none';
                    if (show) count++;
                });
                if (total) total.textContent = count;
            }
            ['#cf-name','#cf-code'].forEach(id=>{ const e=q(id); if(e) e.addEventListener('input', applyFilter);});
            refreshBtn?.addEventListener('click', ()=>{ applyFilter(); showToast('Grid refreshed'); });
            function token(){ const el=document.querySelector('#rg-af input[name="__RequestVerificationToken"]'); return el?el.value:''; }
            rows.forEach(r=>{
                const edit=r.querySelector('.btn-edit'); const save=r.querySelector('.btn-save'); const cancel=r.querySelector('.btn-cancel');
                const toggle=()=>{ r.querySelectorAll('.disp').forEach(e=>e.classList.toggle('d-none')); r.querySelectorAll('.edit').forEach(e=>e.classList.toggle('d-none')); edit.classList.toggle('d-none'); save.classList.toggle('d-none'); cancel.classList.toggle('d-none'); };
                let orig=null;
                edit?.addEventListener('click',()=>{ orig={name:r.querySelector('.col-name input').value, code:r.querySelector('.col-code input').value}; toggle(); });
                cancel?.addEventListener('click',()=>{ if(orig){ r.querySelector('.col-name input').value=orig.name; r.querySelector('.col-code input').value=orig.code;} toggle(); });
                save?.addEventListener('click', async ()=>{
                    const payload = { id: r.getAttribute('data-id'), regionName: r.querySelector('.col-name input').value, regionCode: r.querySelector('.col-code input').value };
                    const resp = await fetch('/Regions/InlineUpdate',{ method:'POST', headers:{ 'Content-Type':'application/json','RequestVerificationToken': token() }, body: JSON.stringify(payload)});
                    if (resp.ok){ const data=await resp.json(); r.querySelector('.col-name .disp').textContent = data.regionName||payload.regionName; r.querySelector('.col-code .disp').textContent = data.regionCode||payload.regionCode; toggle(); showToast('Saved'); }
                    else alert('Failed to save changes');
                });
            });
            applyFilter();
        })();
    </script>
}
