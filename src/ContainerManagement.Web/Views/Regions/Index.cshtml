@model List<ContainerManagement.Application.Dtos.Regions.RegionListItemDto>

@{
    ViewData["Title"] = "Regions";
}

<div class="container mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
        <h2 class="fw-bold mb-0">Regions</h2>
        <div class="w-100 w-md-auto" style="min-width:480px;">
            <div class="input-group">
                <span class="input-group-text">Name</span>
                <input id="regionSearch" class="form-control" placeholder="Filter by name..." />
                <select id="regionPageSize" class="form-select" style="max-width: 120px;">
                    <option value="10" selected>10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="0">All</option>
                </select>
                <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add Region</a>
                <a asp-action="Import" class="btn btn-outline-secondary"><i class="bi bi-upload"></i> Import</a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <div class="table-responsive">
            <table class="table table-hover table-striped align-middle" id="regionsTable">
                <thead class="table-dark">
                    <tr>
                        <th>Region Name</th>
                        <th>Region Code</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.RegionName</td>
                                <td>@r.RegionCode</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                                    <button type="button"
                                            class="btn btn-sm btn-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteRegionModal"
                                            data-id="@r.Id"
                                            data-name="@r.RegionName"
                                            data-code="@r.RegionCode">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr data-empty-row="1">
                            <td colspan="3" class="text-center text-muted">No regions available.</td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="deleteRegionModal" tabindex="-1" aria-labelledby="deleteRegionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteRegionModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">Are you sure you want to delete this region?</p>
                <div class="border rounded p-2 bg-light">
                    <div><strong>Region Name:</strong> <span id="delRegionName"></span></div>
                    <div><strong>Region Code:</strong> <span id="delRegionCode"></span></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteRegionForm" asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="delRegionId" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const search = document.getElementById('regionSearch');
        const table = document.getElementById('regionsTable');
        const pageSize = document.getElementById('regionPageSize');
        function applyRegionFilter() {
            const q = (search?.value || '').toLowerCase();
            const rows = Array.from(table.querySelectorAll('tbody tr')).filter(r => !r.dataset.emptyRow);
            rows.forEach(tr => {
                const text = tr.innerText.toLowerCase();
                tr.dataset.match = text.includes(q) ? '1' : '0';
            });
            paginateRegion();
        }
        function paginateRegion() {
            const size = parseInt(pageSize?.value || '25', 10);
            const matched = Array.from(table.querySelectorAll('tbody tr')).filter(tr => tr.dataset.match !== '0' && !tr.dataset.emptyRow);
            const all = Array.from(table.querySelectorAll('tbody tr')).filter(r => !r.dataset.emptyRow);
            all.forEach(tr => tr.style.display = 'none');
            if (size === 0) matched.forEach(tr => tr.style.display = '');
            else matched.slice(0, size).forEach(tr => tr.style.display = '');

            const emptyRow = table.querySelector('tbody tr[data-empty-row="1"]');
            if (emptyRow) emptyRow.style.display = matched.length === 0 ? '' : 'none';
        }
        search?.addEventListener('input', applyRegionFilter);
        pageSize?.addEventListener('change', paginateRegion);
        // init
        Array.from(table.querySelectorAll('tbody tr')).forEach(tr => { if (!tr.dataset.emptyRow) tr.dataset.match = '1'; });
        paginateRegion();
        const deleteModal = document.getElementById('deleteRegionModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            const code = button.getAttribute('data-code');
            document.getElementById('delRegionId').value = id;
            document.getElementById('delRegionName').textContent = name || '';
            document.getElementById('delRegionCode').textContent = code || '';
        });
    </script>
}
