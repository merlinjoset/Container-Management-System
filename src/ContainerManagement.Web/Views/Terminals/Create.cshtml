@model ContainerManagement.Application.Dtos.Terminals.TerminalCreateDto

@{
    ViewData["Title"] = "Create Terminal";
    var ports = ViewBag.Ports as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
}

<div class="container mt-4">
    <h3 class="fw-bold mb-3">Create Terminal</h3>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="PortId" class="form-label">Port</label>
                        <select asp-for="PortId" class="form-select" asp-items="ports">
                            <option value="">-- Select Port --</option>
                        </select>
                        <span asp-validation-for="PortId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TerminalName" class="form-label"></label>
                        <input asp-for="TerminalName" class="form-control" />
                        <span asp-validation-for="TerminalName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TerminalCode" class="form-label"></label>
                        <input asp-for="TerminalCode" class="form-control" />
                        <span asp-validation-for="TerminalCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
