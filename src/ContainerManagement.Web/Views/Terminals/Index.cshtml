@model List<ContainerManagement.Application.Dtos.Terminals.TerminalListItemDto>

@{
    ViewData["Title"] = "Terminals";
}

<div class="container mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
        <h2 class="fw-bold mb-0">Terminals</h2>
        <div class="w-100 w-md-auto" style="min-width:480px;">
            <div class="input-group">
                <span class="input-group-text">Name</span>
                <input id="terminalSearch" class="form-control" placeholder="Filter by name..." />
                <select id="terminalPageSize" class="form-select" style="max-width: 120px;">
                    <option value="10" selected>10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="0">All</option>
                </select>
                <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add Terminal</a>
                <a asp-action="Import" class="btn btn-outline-secondary"><i class="bi bi-upload"></i> Import</a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle" id="terminalsTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Port Code</th>
                            <th>Port Name</th>
                            <th>Terminal Name</th>
                            <th>Terminal Code</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var t in Model)
                            {
                                <tr>
                                    <td>@t.PortCode</td>
                                    <td>@t.PortName</td>
                                    <td>@t.TerminalName</td>
                                    <td>@t.TerminalCode</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-warning me-2">Edit</a>
                                        <button type="button"
                                                class="btn btn-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteTerminalModal"
                                                data-id="@t.Id"
                                                data-name="@t.TerminalName"
                                                data-code="@t.TerminalCode">
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr data-empty-row="1">
                                <td colspan="3" class="text-center text-muted">No terminals available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteTerminalModal" tabindex="-1" aria-labelledby="deleteTerminalModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteTerminalModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">Are you sure you want to delete this terminal?</p>
                <div class="border rounded p-2 bg-light">
                    <div><strong>Terminal Name:</strong> <span id="delTerminalName"></span></div>
                    <div><strong>Terminal Code:</strong> <span id="delTerminalCode"></span></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteTerminalForm" asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="delTerminalId" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const tSearch = document.getElementById('terminalSearch');
        const tTable = document.getElementById('terminalsTable');
        const tSize = document.getElementById('terminalPageSize');
        function applyTerminalFilter() {
            const q = (tSearch?.value || '').toLowerCase();
            const rows = Array.from(tTable.querySelectorAll('tbody tr')).filter(r => !r.dataset.emptyRow);
            rows.forEach(tr => {
                const text = tr.innerText.toLowerCase();
                tr.dataset.match = text.includes(q) ? '1' : '0';
            });
            paginateTerminals();
        }
        function paginateTerminals() {
            const size = parseInt(tSize?.value || '25', 10);
            const matched = Array.from(tTable.querySelectorAll('tbody tr')).filter(tr => tr.dataset.match !== '0' && !tr.dataset.emptyRow);
            const all = Array.from(tTable.querySelectorAll('tbody tr')).filter(r => !r.dataset.emptyRow);
            all.forEach(tr => tr.style.display = 'none');
            if (size === 0) matched.forEach(tr => tr.style.display = '');
            else matched.slice(0, size).forEach(tr => tr.style.display = '');

            const emptyRow = tTable.querySelector('tbody tr[data-empty-row="1"]');
            if (emptyRow) emptyRow.style.display = matched.length === 0 ? '' : 'none';
        }
        tSearch?.addEventListener('input', applyTerminalFilter);
        tSize?.addEventListener('change', paginateTerminals);
        Array.from(tTable.querySelectorAll('tbody tr')).forEach(tr => { if (!tr.dataset.emptyRow) tr.dataset.match = '1'; });
        paginateTerminals();
        const deleteModal = document.getElementById('deleteTerminalModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            const code = button.getAttribute('data-code');
            document.getElementById('delTerminalId').value = id;
            document.getElementById('delTerminalName').textContent = name || '';
            document.getElementById('delTerminalCode').textContent = code || '';
        });
    </script>
}
