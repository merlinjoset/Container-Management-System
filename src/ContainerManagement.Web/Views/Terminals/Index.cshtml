@model IEnumerable<ContainerManagement.Application.Dtos.Terminals.TerminalListItemDto>

@{
    ViewData["Title"] = "Terminals";
}

@section Styles{
    <link rel="stylesheet" href="~/css/ui-common.css" asp-append-version="true" />
    <style>
        .op-toast { position: fixed; right: 1rem; bottom: 1rem; background: #111827; color: #fff; padding: .5rem .75rem; border-radius: .375rem; opacity: 0; transition: opacity .2s ease; }
        .op-toast.show { opacity: .95; }
    </style>
}

<div class="operator-page">
    <div class="page-header">Terminals</div>
    @await Html.PartialAsync("_GridToolbar")

    <div class="content">
        <div class="left-grid">
            <div class="grid-card">
                <div class="grid-header">
                    <div>Terminal Data</div>
                    <span class="badge badge-count" id="tm-total">@Model?.Count() ?? 0</span>
                </div>

                <div class="table-wrapper">
                    <table class="table table-sm mb-0 sticky" id="termTable">
                        <thead>
                            <tr>
                                <th>Terminal Name</th>
                                <th>Terminal Code</th>
                                <th>Port</th>
                                <th style="width:130px;">Actions</th>
                            </tr>
                            <tr class="filter-row">
                                <th><input id="cf-name" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-code" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th><input id="cf-port" class="form-control form-control-sm" placeholder="Filter..." /></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tm-grid-body">
                        @if (Model?.Any() == true)
                        {
                            foreach (var t in Model)
                            {
                                <tr data-id="@t.Id">
                                    <td class="col-name"><span class="disp">@t.TerminalName</span><input class="form-control form-control-sm edit d-none" value="@t.TerminalName" /></td>
                                    <td class="col-code"><span class="disp">@t.TerminalCode</span><input class="form-control form-control-sm edit d-none" value="@t.TerminalCode" /></td>
                                    <td class="col-port"><span class="disp">@t.PortName</span>
                                        <select class="form-select form-select-sm edit d-none">
                                            @if (ViewBag.Ports is IEnumerable<SelectListItem> ports)
                                            { foreach (var p in ports){ <option value="@p.Value" selected="@(t.PortId.ToString()==p.Value)">@p.Text</option>; } }
                                        </select>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2 align-items-center">
                                            <button type="button" class="btn btn-sm btn-outline-primary btn-edit" data-bs-toggle="tooltip" title="Edit"><i class="bi bi-pencil"></i></button>
                                            <button type="button" class="btn btn-sm btn-success d-none btn-save" data-bs-toggle="tooltip" title="Save"><i class="bi bi-check-lg"></i></button>
                                            <button type="button" class="btn btn-sm btn-secondary d-none btn-cancel" data-bs-toggle="tooltip" title="Cancel"><i class="bi bi-x-lg"></i></button>
                                            <form asp-action="Delete" method="post" class="d-inline m-0">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@t.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete" onclick="return confirm('Delete this terminal?');"><i class="bi bi-trash"></i></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="right-blank"></div>
    </div>
</div>

<div id="tm-toast" class="op-toast" role="status" aria-live="polite"></div>
<form id="term-af">@Html.AntiForgeryToken()</form>
@section Scripts {
    <script>
        (function(){
            const q=(s)=>document.querySelector(s);
            const rows = Array.from(document.querySelectorAll('#tm-grid-body tr'));
            const total = q('#tm-total');
            const refreshBtn = q('#grid-refresh');
            const toast = q('#tm-toast');
            function showToast(msg){ if(!toast) return; toast.textContent = msg; toast.classList.add('show'); setTimeout(()=>toast.classList.remove('show'), 1500); }
            function filter(){
                const fname=(q('#cf-name')?.value||'').toLowerCase();
                const fcode=(q('#cf-code')?.value||'').toLowerCase();
                const fport=(q('#cf-port')?.value||'').toLowerCase();
                let count=0;
                rows.forEach(r=>{
                    const name=r.querySelector('.col-name .disp').textContent.toLowerCase();
                    const code=r.querySelector('.col-code .disp').textContent.toLowerCase();
                    const port=r.querySelector('.col-port .disp').textContent.toLowerCase();
                    const show=(!fname||name.includes(fname))&&(!fcode||code.includes(fcode))&&(!fport||port.includes(fport));
                    r.style.display = show? '':'none';
                    if (show) count++;
                });
                if (total) total.textContent = count;
            }
            ['#cf-name','#cf-code','#cf-port'].forEach(id=>{ const e=q(id); if(e) e.addEventListener('input', filter);}); filter();
            function token(){ const el=document.querySelector('#term-af input[name="__RequestVerificationToken"]'); return el?el.value:''; }
            rows.forEach(r=>{
                const edit=r.querySelector('.btn-edit'); const save=r.querySelector('.btn-save'); const cancel=r.querySelector('.btn-cancel');
                const toggle=()=>{ r.querySelectorAll('.disp').forEach(e=>e.classList.toggle('d-none')); r.querySelectorAll('.edit').forEach(e=>e.classList.toggle('d-none')); edit.classList.toggle('d-none'); save.classList.toggle('d-none'); cancel.classList.toggle('d-none'); };
                let orig=null;
                edit?.addEventListener('click',()=>{ orig={ name:r.querySelector('.col-name input').value, code:r.querySelector('.col-code input').value, port:r.querySelector('.col-port select').value}; toggle(); });
                cancel?.addEventListener('click',()=>{ if(orig){ r.querySelector('.col-name input').value=orig.name; r.querySelector('.col-code input').value=orig.code; r.querySelector('.col-port select').value=orig.port; } toggle();});
                save?.addEventListener('click', async ()=>{
                    const payload={ id:r.getAttribute('data-id'), terminalName:r.querySelector('.col-name input').value, terminalCode:r.querySelector('.col-code input').value, portId:r.querySelector('.col-port select').value };
                    const resp=await fetch('/Terminals/InlineUpdate',{ method:'POST', headers:{ 'Content-Type':'application/json','RequestVerificationToken': token() }, body: JSON.stringify(payload)});
                    if (resp.ok){ const data=await resp.json(); r.querySelector('.col-name .disp').textContent=data.terminalName||payload.terminalName; r.querySelector('.col-code .disp').textContent=data.terminalCode||payload.terminalCode; r.querySelector('.col-port .disp').textContent=data.portName||''; toggle(); showToast('Saved'); } else alert('Failed to save changes');
                });
            });
            refreshBtn?.addEventListener('click', ()=>{ filter(); showToast('Grid refreshed'); });
        })();
    </script>
}




