@model List<ContainerManagement.Application.Dtos.Countries.CountryListItemDto>

@{
    ViewData["Title"] = "Countries";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Countries</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Add Country
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Country Name</th>
                        <th>Country Code</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var c in Model)
                        {
                            <tr>
                                <td>@c.CountryName</td>
                                <td>@c.CountryCode</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                                    <button type="button"
                                            class="btn btn-sm btn-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteCountryModal"
                                            data-id="@c.Id"
                                            data-name="@c.CountryName"
                                            data-code="@c.CountryCode">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No countries available.</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<div class="modal fade" id="deleteCountryModal" tabindex="-1" aria-labelledby="deleteCountryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteCountryModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">Are you sure you want to delete this country?</p>
                <div class="border rounded p-2 bg-light">
                    <div><strong>Country Name:</strong> <span id="delCountryName"></span></div>
                    <div><strong>Country Code:</strong> <span id="delCountryCode"></span></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteCountryForm" asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="delCountryId" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteModal = document.getElementById('deleteCountryModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            const code = button.getAttribute('data-code');
            document.getElementById('delCountryId').value = id;
            document.getElementById('delCountryName').textContent = name || '';
            document.getElementById('delCountryCode').textContent = code || '';
        });
    </script>
}

